<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ERestaurant</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap-responsive.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar collapsed" style="padding: 3px 10px; color: rgb(0, 0, 0);" data-target=".nav-collapse" data-toggle="collapse">导航栏</a><span></span>
                    <a name="top" class="brand text_bnb_strong bnb_middle" href="" style="line-height:20px">ERestaurant</a>
                    <div class="nav-collapse collapse" style="height: 0px;">
                        <ul class="nav pull-left" style="margin-right: 0px;">
                            <li class="divider-vertical"></li>
                            <li class="dropdown"><a class="text_bnb_strong" href="">订单管理</a></li>
                            <li class="divider-vertical"></li>
                            <li class="dropdown"><a class="text_bnb_strong" href="">菜品管理</a></li>
                            <li class="divider-vertical"></li>
                            <li class="dropdown"><a class="text_bnb_strong" href="">分类管理</a></li>
                            <li class="divider-vertical"></li>
                        </ul>
                        <ul class="nav pull-right" id="destoon_member"><li class="dropdown"><a href="">登录</a></li><li class="dropdown"><a href="">注册</a></li></ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - ERestaurant - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
